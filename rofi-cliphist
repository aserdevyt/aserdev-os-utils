#!/bin/bash
# ðŸ“‹ aserdev's cursed clipboard selector ðŸ’€
# this script exists because I cba to remember what I copied 5 minutes ago

# open the gates of hell (aka cliphist)
selected=$(cliphist list | rofi -dmenu -p "ðŸ“‹ Clipboard (pick something bro)" -theme ~/.config/rofi/clipboard.rasi)

# if the user actually picked something (rare)
if [ -n "$selected" ]; then
    # decode the mysterious hieroglyphics
    cliphist decode <<< "$selected" | wl-copy
    
    notify-send "âœ… Copied" "Congrats bro, you used your clipboard like a functional human ðŸ’€"
else
    # user pressed escape like a coward
    notify-send "ðŸ’€ Nothing Selected" "bro why open it if you're not picking anything"
fi
