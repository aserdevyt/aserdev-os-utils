#!/usr/bin/bash

MENU=$(printf "游대 reboot\n游뿲 poweroff\n游븸游낕 logout\n游대游댦 force reboot\n游뿲游댦 force poweroff\n游땞 cancel" | rofi -dmenu -p "power游댊:")


case "$MENU" in
"游대 reboot") reboot;;
"游뿲 poweroff") poweroff;;
"游븸游낕 logout") hyprctl dispatch exit;;
"游대游댦 force reboot") pkexec reboot;;
"游뿲游댦 force poweroff") pkexec poweroff;;
"游땞 cancel") exit 0;;
esac